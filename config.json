{
    "source": [
        "tokens/**/*.json"
    ],
    "platforms": {
        "scss": {
            "transformGroup": "scss",
            "buildPath": "build/scss/",
            "files": [
                {
                    "destination": "_variables.scss",
                    "format": "scss/variables"
                }
            ]
        },
        "js": {
            "transformGroup": "js",
            "buildPath": "build/js/",
            "files": [
                {
                    "transforms": ["attribute/cti", "name/cti/snake", "color/hex", "size/rem"],
                    "destination": "variables.js",
                    "format": "javascript/es6"
                }
            ]
        }
    }
}
